<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/distance_70">

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingEnd="16dp"
        android:paddingStart="15dp">

        <ImageView
            android:id="@+id/device_img"
            android:layout_width="@dimen/distance_40"
            android:layout_height="@dimen/distance_40"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/device_img" />

        <TextView
            android:id="@+id/base_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/distance_2d5"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="@dimen/distance_2d5"
            android:layout_toEndOf="@+id/device_img"
            android:maxLines="1"
            android:textColor="@color/grayBlack"
            android:textSize="14sp"
            tools:text="标题文字" />

        <TextView
            android:id="@+id/base_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/base_title"
            android:layout_marginBottom="@dimen/distance_2d5"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="@dimen/distance_2d5"
            android:layout_toEndOf="@+id/device_img"
            android:maxLines="2"
            android:textColor="@color/grey"
            android:textSize="11sp"
            tools:text="标题介绍" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/distance_15"
        android:background="@color/stroke" />
</FrameLayout>