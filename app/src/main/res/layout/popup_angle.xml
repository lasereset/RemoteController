<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="9dp"
        app:cardBackgroundColor="@color/gray_15"
        android:layout_margin="@dimen/distance_10">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/angle_360"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="@dimen/distance_5"
                android:layout_weight="1.0"
                android:background="@drawable/shapewhite_black_4"
                android:text="全盘扫描" />

            <Button
                android:id="@+id/angle_15"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="@dimen/distance_5"
                android:layout_weight="1.0"
                android:background="@drawable/shapewhite_black_4"
                android:text="15°" />

            <Button
                android:id="@+id/angle_30"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="@dimen/distance_5"
                android:layout_weight="1.0"
                android:background="@drawable/shapewhite_black_4"
                android:text="30°" />

            <Button
                android:id="@+id/angle_60"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="@dimen/distance_5"
                android:layout_weight="1.0"
                android:background="@drawable/shapewhite_black_4"
                android:text="60°" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
