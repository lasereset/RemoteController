<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="9dp"
        app:cardBackgroundColor="@color/gray_15"
        android:layout_margin="@dimen/distance_10">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/speed_0"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="@dimen/distance_5"
                android:layout_weight="1.0"
                android:background="@drawable/shapewhite_black_4"
                android:text="0" />

            <Button
                android:id="@+id/speed_150"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="@dimen/distance_5"
                android:layout_weight="1.0"
                android:background="@drawable/shapewhite_black_4"
                android:text="150rpm" />

            <Button
                android:id="@+id/speed_300"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="@dimen/distance_5"
                android:layout_weight="1.0"
                android:background="@drawable/shapewhite_black_4"
                android:text="300rpm" />

            <Button
                android:id="@+id/speed_600"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="@dimen/distance_5"
                android:layout_weight="1.0"
                android:background="@drawable/shapewhite_black_4"
                android:text="600rpm" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
