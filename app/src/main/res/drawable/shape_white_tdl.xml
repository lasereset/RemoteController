<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--    想保留哪一边就设置哪一边边框   -->
    <item>
        <shape>
            <!--    边框颜色    -->
            <solid android:color="#CCCCCC" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:top="1dp">
        <shape>
            <solid android:color="#fff" />
        </shape>
    </item>
</layer-list>